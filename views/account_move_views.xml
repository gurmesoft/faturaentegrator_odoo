<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_fe" model="ir.ui.view">
        <field name="name">account.move.form.fatura.entegrator</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_to_fe" type="object" string="FE'e Gönder" class="btn-primary" invisible="fe_invoice_id != False"/>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Fatura Entegratör" invisible="fe_invoice_id == False">
                    <group>
                        <group>
                            <field name="fe_invoice_id" readonly="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="fe_invoice_url" widget="url" readonly="1"/>
                            <field name="fe_state" readonly="1"/>
                        </group>
                        <group string="PDF Bilgileri" invisible="fe_pdf_url == False">
                            <field name="fe_pdf_url" widget="url" readonly="1" string="PDF URL"/>
                            <field name="fe_pdf_attachment_id" readonly="1" invisible="fe_pdf_attachment_id == False" string="Kaydedildi"/>
                            <button name="action_view_fe_pdf" type="object" string="PDF İndir" class="btn-primary" invisible="fe_pdf_url == False" icon="fa-download"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_fe_send_invoice_wizard" model="ir.ui.view">
        <field name="name">fe.send.invoice.wizard.form</field>
        <field name="model">fe.send.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Fatura Entegratör Gönder">
                <group>
                    <group>
                        <field name="move_id" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="integration_choice_id"/>
                    </group>
                    <group string="Müşteri Bilgileri">
                        <field name="customer_name"/>
                        <field name="customer_vat"/>
                        <field name="customer_email"/>
                        <field name="customer_phone"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="zip"/>
                        <field name="country_code"/>
                    </group>
                    <group string="Tutarlar">
                        <field name="currency_id"/>
                        <field name="amount_untaxed" readonly="1"/>
                        <field name="amount_tax" readonly="1"/>
                        <field name="amount_total" readonly="1"/>
                    </group>
                </group>
                <group>
                    <group string="İnternet Satışı">
                        <field name="is_internet_sale"/>
                        <field name="payment_method"/>
                        <field name="payment_platform"/>
                        <field name="payment_date"/>
                    </group>
                    <group string="Teslimat">
                        <field name="is_need_shipment"/>
                        <field name="shipment_company_title"/>
                        <field name="shipment_company_tax_number"/>
                        <field name="shipment_courier_name"/>
                        <field name="shipment_courier_tax_number"/>
                        <field name="shipment_delivery_date"/>
                    </group>
                </group>
                <group string="Satırlar">
                    <field name="line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="name" readonly="1"/>
                            <field name="sku" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="price_unit" readonly="1"/>
                            <field name="taxes" readonly="1"/>
                            <field name="tax_rate" readonly="1"/>
                            <field name="subtotal" readonly="1"/>
                            <field name="exemption_code" invisible="tax_rate != 0"/>
                            <field name="exemption_reason" invisible="tax_rate != 0"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button string="Gönder" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Vazgeç" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

